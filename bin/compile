#!/bin/bash

indent() {
  sed 's/^/       /'
}

ENV_DIR=$3

if [[ $(cat "$ENV_DIR/RAILS_ENV") == "production" ]]; then
  echo "-----> Production environment, skipping precompile."
else
  echo "-----> exporting env"
  blacklist_regex=${3:-'^(PATH|GIT_DIR|CPATH|CPPATH|LD_PRELOAD|LIBRARY_PATH)$'}
  for e in $(ls $ENV_DIR); do
    echo "$e" | grep -qvE "$blacklist_regex" &&
    export "$e=$(cat $ENV_DIR/$e)"
    :
  done

  echo "-----> Precompiling assets..."

  cd $1
  SKIP_CORPUS=1 bundle exec rake assets:precompile | indent

  echo "-----> Assets precompiled!"
fi

echo "-----> Deleting app/assets to reduce slug size"
rm -rf app/assets/
