#!/bin/bash

indent() {
  sed 's/^/       /'
}

BUILD_DIR=$1
CACHE_DIR=$2
ENV_DIR=$3
RAILS_ENV=$(cat "$ENV_DIR/RAILS_ENV")

if [[ $RAILS_ENV == "production" ]]; then
  echo "-----> Production environment, skipping precompile."
else
  if [[ -f $CACHE_DIR/prev_version.txt ]]; then
    prev_version=$(cat $CACHE_DIR/prev_version.txt)
    echo "-----> previous version detected: $prev_version"

    diff=$(git diff --name-only $prev_version $SOURCE_VERSION)

    if [[ $diff = *"app/assets/"* ]] ; then
      precompile=true
    else
      precompile=false
    fi
  else
    precompile=true
  fi

  echo $SOURCE_VERSION > $CACHE_DIR/prev_version.txt

  if [[ $precompile = true ]]; then
    echo "-----> Asset change detected, precompiling."
    echo "-----> exporting env"
    blacklist_regex=${3:-'^(PATH|GIT_DIR|CPATH|CPPATH|LD_PRELOAD|LIBRARY_PATH)$'}
    for e in $(ls $ENV_DIR); do
      echo "$e" | grep -qvE "$blacklist_regex" &&
      export "$e=$(cat $ENV_DIR/$e)"
      :
    done

    echo "-----> Restoring Assets from Cache (if any)"
    cp -r $CACHE_DIR/assets $BUILD_DIR/public/

    echo "-----> Precompiling assets..."

    cd $BUILD_DIR
    SKIP_CORPUS=1 bundle exec rake assets:precompile | indent

    echo "-----> Assets precompiled!"
    echo "-----> Saving Assets to Cache"
    cp -r $BUILD_DIR/public/assets $CACHE_DIR
  fi
fi

echo "-----> Deleting app/assets to reduce slug size"
rm -rf app/assets/
